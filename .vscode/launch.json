    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dazzle build w/o hash",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileWorkspaceFolder}/dazzle",
            "args": [
                "build",
                "localhost:5000/dazzle",
                "-v",
                "--chunked-without-hash"
            ]
        },
        {
            "name": "Dazzle build with hash",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileWorkspaceFolder}/dazzle",
            "args": [
                "build",
                "localhost:5000/dazzle",
                "-v"
            ]
        },
        {
            "name": "Dazzle combine",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileWorkspaceFolder}/dazzle",
            "args": [
                "combine",
                "localhost:5000/dazzle",
                "--all",
                "-v",
            ]
        },
    ]
}
